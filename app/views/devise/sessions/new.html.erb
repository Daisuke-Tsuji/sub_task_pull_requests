<% provide(:title,"ログイン") %>
<div class="w-100 d-flex justify-content-center">
  <div class="w-30 border border-secondary p-5">

    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :ユーザーネーム %><br />
        <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :常にログイン状態にする %>
        </div>
      <% end %>

      <div class="actions m-2">
        <%= f.submit "Log in" %>
      </div>

      <div class="m-2">
        <%= link_to user_facebook_omniauth_authorize_path class: 'btn btn-default' do %>
            <i class="fab fa-facebook"></i>
            <span>Facebookログイン</span>
        <% end %>
      </div>

    <% end %>

  </div>
</div>
